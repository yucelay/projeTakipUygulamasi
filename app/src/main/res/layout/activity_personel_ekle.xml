<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/activity_background2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="16dp"
        android:textColor="#3E20FF"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/personelAdiSoyadiEditText"
        android:layout_width="210dp"
        android:layout_marginTop="20dp"
        android:layout_height="35dp"
        android:hint="Personel Adı - Soyadı"
        android:inputType="textPersonName"
        android:background="@drawable/buton_backgroud"
        android:drawableLeft="@drawable/personel_edittext_icon" />

    <EditText
        android:id="@+id/personelEmailEditText"
        android:layout_width="210dp"
        android:layout_marginTop="10dp"
        android:layout_height="35dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:background="@drawable/buton_backgroud"
        android:drawableLeft="@drawable/personel_edittext_mail_icon"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
    <Button
        android:id="@+id/personelKaydetButon"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="Kaydet"
        android:background="@drawable/buton_backgroud"
        android:drawableLeft="@drawable/kaydet_ico"/>
    <Button
        android:id="@+id/personelKaydetKapatButon"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/buton_backgroud"
        android:text="Kapat"
        android:drawableLeft="@drawable/proje_ekle_kapat_icon"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>