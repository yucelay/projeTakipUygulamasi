<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/list_border_public">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/projeIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="projeID"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/projeAdiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="ProjeAdi"
            android:textColor="#161696"
            android:textSize="20dp"
            android:textStyle="bold"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:text="Detaylar"
            android:id="@+id/yapilacaklarDetayButon"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:drawableLeft="@drawable/detay_icon_small_search"
            android:background="@drawable/buton_backgroud"
            android:layout_marginRight="8dp"/>

    </LinearLayout>

</LinearLayout>