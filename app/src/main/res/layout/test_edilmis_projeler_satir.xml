<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/list_border_background_white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/projeIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="projeID"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/projeAdiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="ProjeAdi"
            android:textColor="#e74e0303"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:text="ArÅŸive Ekle"
            android:id="@+id/arsiveEkleButon"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textSize="10sp"
            android:layout_marginRight="8dp"
            android:textColor="#FFF"
            android:drawableLeft="@drawable/arsive_ekle_icon_white"
            android:background="@drawable/buton_background_black"/>

    </LinearLayout>

</LinearLayout>