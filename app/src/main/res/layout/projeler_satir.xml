<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/projeIDTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="projeID"
            android:textSize="12dp"/>
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/projeAdiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProjeAdi"
            android:textSize="20dp" />

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/projePersonelSayisiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PersonelSayisi"
            android:textSize="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:text="Personel Ekle"
        android:id="@+id/personelEkleButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:width="120dp" />

    <Button
        android:text="Personel Bilgileri"
        android:id="@+id/personelBilgileriButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:width="120dp"/>
    </LinearLayout>

</LinearLayout>