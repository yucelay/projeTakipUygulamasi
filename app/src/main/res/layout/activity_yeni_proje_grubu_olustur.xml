<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/projeidEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Proje ID"
        android:inputType="textPersonName|number" />

    <EditText
        android:id="@+id/projeAdiEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Proje Adı"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/sifreEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right">
    <Button
        android:id="@+id/projeOlusturButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oluştur" />

        <Button
            android:id="@+id/projeOlusturKapatButon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kapat"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>